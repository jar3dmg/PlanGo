@page "/expenses/edit/{id:int}"
@using System.ComponentModel.DataAnnotations
@using TravelOrganizer.Client.Models
@using TravelOrganizer.Client.Services
@inject ExpenseApiService ExpenseService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="expense-edit fade-in">
    <h3 class="text-center mb-4 text-gradient fw-semibold">
        <span class="bi bi-pencil-square me-2"></span> Editar Gasto 💰
    </h3>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-light"></div>
            <p class="mt-3 text-light opacity-75">Cargando datos del gasto...</p>
        </div>
    }
    else if (expense is null)
    {
        <div class="alert alert-danger text-center mt-5 shadow-sm">
            <strong>❌ No se encontró el gasto solicitado.</strong>
            <div class="mt-3">
                <button class="btn btn-outline-light" @onclick="@(() => Nav.NavigateTo("/expenses"))">
                    <span class="bi bi-arrow-left-circle"></span> Volver
                </button>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="expense" OnValidSubmit="UpdateExpense">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-warning mb-3" />

            <div class="form-card mx-auto">
                <!-- Descripción -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción *</label>
                    <InputText class="form-control input-styled" @bind-Value="expense.Description" />
                    <ValidationMessage For="@(() => expense.Description)" class="text-warning small" />
                </div>

                <!-- Monto -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Monto (MXN) *</label>
                    <InputNumber class="form-control input-styled" @bind-Value="expense.Amount" />
                    <ValidationMessage For="@(() => expense.Amount)" class="text-warning small" />
                </div>

                <!-- Fecha -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha *</label>
                    <InputDate class="form-control input-styled" @bind-Value="expense.Date" />
                    <ValidationMessage For="@(() => expense.Date)" class="text-warning small" />
                </div>

                <!-- Notas -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Notas</label>
                    <InputTextArea class="form-control input-styled" @bind-Value="expense.Notes" Rows="3" />
                </div>

                <!-- Botones -->
                <div class="text-end mt-4">
                    <button type="button" class="btn btn-outline-light me-2"
                            @onclick="@(() => Nav.NavigateTo($"/expenses/{expense.TripId}"))">
                        <span class="bi bi-arrow-left-circle"></span> Cancelar
                    </button>

                    <button type="submit" class="btn btn-gradient">
                        <span class="bi bi-save"></span> Guardar cambios
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private ExpenseInputModel? expense;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var existing = await ExpenseService.GetByIdAsync(id);
            if (existing is not null)
            {
                expense = new ExpenseInputModel
                    {
                        TripId = existing.TripId,
                        Description = existing.Description,
                        Amount = existing.Amount,
                    // conversión segura DateOnly -> DateTime
                        Date = existing.Date.ToDateTime(TimeOnly.MinValue),
                        Notes = existing.Notes
                    };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar gasto: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Error al cargar los datos del gasto.");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateExpense()
    {
        if (expense is null) return;

        try
        {
            var dto = new ExpensePostDto
                {
                    TripId = expense.TripId,
                    Description = expense.Description,
                    Amount = expense.Amount,
                // conversión segura DateTime -> DateOnly
                    Date = DateOnly.FromDateTime(expense.Date),
                    Notes = expense.Notes
                };

            var success = await ExpenseService.UpdateAsync(id, dto);

            if (success)
            {
                await JS.InvokeVoidAsync("alert", "✅ Gasto actualizado correctamente.");
                Nav.NavigateTo($"/expenses/{expense.TripId}");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ No se pudo actualizar el gasto.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al actualizar gasto: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Error inesperado al actualizar el gasto.");
        }
    }

    private class ExpenseInputModel
    {
        public int TripId { get; set; }

        [Required(ErrorMessage = "La descripción es obligatoria.")]
        [StringLength(100, ErrorMessage = "Máximo 100 caracteres.")]
        public string? Description { get; set; }

        [Range(0, 1000000, ErrorMessage = "El monto no puede ser negativo.")]
        public decimal Amount { get; set; } = 0;

        [Required(ErrorMessage = "La fecha es obligatoria.")]
        public DateTime Date { get; set; } = DateTime.Today;

        public string? Notes { get; set; }
    }
}

<style>
    :root {
        --azul-oscuro: #0b132b;
        --morado: #6a5acd;
        --azul: #4f9ef8;
        --texto-claro: #e4e9ff;
    }

    body {
        background-color: var(--azul-oscuro);
        color: var(--texto-claro);
        font-family: 'Segoe UI', sans-serif;
    }

    .expense-edit {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        min-height: 90vh;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        padding: 2rem;
        width: 100%;
        max-width: 700px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
        color: #f0f3ff;
    }

    .text-gradient {
        background: linear-gradient(90deg, var(--morado), var(--azul));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .input-styled {
        border: 1px solid rgba(255, 255, 255, 0.2);
        background-color: rgba(255, 255, 255, 0.05);
        color: #fff;
        border-radius: 8px;
        transition: all 0.25s ease;
    }

        .input-styled:focus {
            border-color: var(--azul);
            box-shadow: 0 0 0 3px rgba(79, 158, 248, 0.3);
        }

    .btn-gradient {
        background: linear-gradient(90deg, var(--azul), var(--morado));
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.2rem;
        transition: all 0.25s ease;
        font-weight: 500;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(108, 99, 255, 0.3);
        }

    .btn-outline-light {
        color: #e4e9ff;
        border-color: rgba(255, 255, 255, 0.4);
    }

        .btn-outline-light:hover {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }

    .text-warning {
        color: #ffd166 !important;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.4s ease-in-out;
    }
</style>
