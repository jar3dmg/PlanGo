@page "/expenses/create/{tripId:int}"
@using System.ComponentModel.DataAnnotations
@using TravelOrganizer.Client.Models
@using TravelOrganizer.Client.Services
@inject ExpenseApiService ExpenseService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="expense-form fade-in">
    <h3 class="text-center mb-4 text-gradient fw-semibold">
        <span class="bi bi-wallet2 me-2"></span> Nuevo Gasto 💰
    </h3>

    @if (isSaving)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-light" role="status"></div>
            <p class="mt-3 text-light opacity-75">Guardando gasto...</p>
        </div>
    }
    else
    {
        <EditForm Model="expense" OnValidSubmit="SaveExpense">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-warning mb-3" />

            <div class="form-card mx-auto">
                <!-- Descripción -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción *</label>
                    <InputText class="form-control input-styled" @bind-Value="expense.Description" />
                    <ValidationMessage For="@(() => expense.Description)" class="text-warning small" />
                </div>

                <!-- Monto -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Monto (MXN) *</label>
                    <InputNumber class="form-control input-styled" @bind-Value="expense.Amount" />
                    <ValidationMessage For="@(() => expense.Amount)" class="text-warning small" />
                </div>

                <!-- Fecha -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha *</label>
                    <InputDate class="form-control input-styled" @bind-Value="expense.Date" />
                    <ValidationMessage For="@(() => expense.Date)" class="text-warning small" />
                </div>

                <!-- Notas -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Notas adicionales</label>
                    <InputTextArea class="form-control input-styled" @bind-Value="expense.Notes" Rows="3" />
                </div>

                <!-- Botones -->
                <div class="text-end mt-4">
                    <button type="button" class="btn btn-outline-light me-2"
                            @onclick="@(() => Nav.NavigateTo($"/expenses/{tripId}"))">
                        <span class="bi bi-arrow-left-circle"></span> Cancelar
                    </button>

                    <button type="submit" class="btn btn-gradient">
                        <span class="bi bi-save"></span> Guardar
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int tripId { get; set; }
    private ExpenseInputModel expense = new();
    private bool isSaving = false;

    protected override void OnInitialized()
    {
        expense.TripId = tripId;
        expense.Amount = 0; // Inicializado en 0 por defecto
        expense.Date = DateTime.Today;
    }

    private async Task SaveExpense()
    {
        try
        {
            isSaving = true;

            var dto = new ExpensePostDto
                {
                    TripId = expense.TripId,
                    Description = expense.Description,
                    Amount = expense.Amount,
                    Date = DateOnly.FromDateTime(expense.Date),
                    Notes = expense.Notes
                };


            var success = await ExpenseService.CreateAsync(dto);
            isSaving = false;

            if (success)
            {
                await JS.InvokeVoidAsync("alert", "✅ Gasto guardado correctamente.");
                Nav.NavigateTo($"/expenses/{tripId}");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ No se pudo guardar el gasto.");
            }
        }
        catch (Exception ex)
        {
            isSaving = false;
            Console.WriteLine($"Error al guardar gasto: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Error inesperado al guardar.");
        }
    }

    private class ExpenseInputModel
    {
        public int TripId { get; set; }

        [Required(ErrorMessage = "La descripción es obligatoria.")]
        [StringLength(100, ErrorMessage = "La descripción no puede superar los 100 caracteres.")]
        public string? Description { get; set; }

        [Range(0, 1000000, ErrorMessage = "El monto no puede ser negativo.")]
        public decimal Amount { get; set; } = 0;

        [Required(ErrorMessage = "La fecha es obligatoria.")]
        public DateTime Date { get; set; }

        public string? Notes { get; set; }
    }
}

<style>
    :root {
        --azul-oscuro: #0b132b;
        --morado: #6a5acd;
        --azul: #4f9ef8;
        --texto-claro: #e4e9ff;
    }

