@page "/activities/edit/{id:int}"
@using System.ComponentModel.DataAnnotations
@using TravelOrganizer.Client.Models
@using TravelOrganizer.Client.Services
@inject ActivityApiService ActivityService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="activity-edit fade-in">
    <h3 class="text-center mb-4 text-gradient fw-semibold">
        <span class="bi bi-pencil-square me-2"></span> Editar Actividad
    </h3>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-light"></div>
            <p class="mt-3 text-light opacity-75">Cargando datos de la actividad...</p>
        </div>
    }
    else if (activity is null)
    {
        <div class="alert alert-danger text-center mt-5 shadow-sm">
            <strong>❌ No se encontró la actividad.</strong>
            <div class="mt-3">
                <button class="btn btn-outline-light" @onclick="@(() => Nav.NavigateTo("/activities"))">
                    <span class="bi bi-arrow-left-circle"></span> Volver
                </button>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="activity" OnValidSubmit="UpdateActivity">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-warning mb-3" />

            <div class="form-card mx-auto">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Título *</label>
                        <InputText class="form-control input-styled" @bind-Value="activity.Title" />
                        <ValidationMessage For="@(() => activity.Title)" class="text-warning small" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Ubicación *</label>
                        <InputText class="form-control input-styled" @bind-Value="activity.Location" />
                        <ValidationMessage For="@(() => activity.Location)" class="text-warning small" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Inicio *</label>
                        <InputDate class="form-control input-styled" @bind-Value="activity.StartDateTime" />
                        <ValidationMessage For="@(() => activity.StartDateTime)" class="text-warning small" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Fin *</label>
                        <InputDate class="form-control input-styled" @bind-Value="activity.EndDateTime" />
                        <ValidationMessage For="@(() => activity.EndDateTime)" class="text-warning small" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Costo (MXN)</label>
                    <InputNumber class="form-control input-styled" @bind-Value="activity.Cost" />
                    <ValidationMessage For="@(() => activity.Cost)" class="text-warning small" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Notas</label>
                    <InputTextArea class="form-control input-styled" @bind-Value="activity.Notes" Rows="3" />
                </div>

                <div class="text-end mt-4">
                    <button type="button" class="btn btn-outline-light me-2"
                            @onclick="@(() => Nav.NavigateTo($"/activities/{activity.TripId}"))">
                        <span class="bi bi-arrow-left-circle"></span> Cancelar
                    </button>

                    <button type="submit" class="btn btn-gradient">
                        <span class="bi bi-save"></span> Guardar Cambios
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private ActivityInputModel? activity;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var existing = await ActivityService.GetByIdAsync(id);
            if (existing is not null)
            {
                activity = new ActivityInputModel
                    {
                        TripId = existing.TripId,
                        Title = existing.Title,
                        Location = existing.Location,
                        StartDateTime = existing.StartDateTime,
                        EndDateTime = existing.EndDateTime,
                        Cost = existing.Cost,
                        Notes = existing.Notes
                    };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar la actividad: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Error al cargar la actividad.");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateActivity()
    {
        if (activity is null) return;

        try
        {
            var dto = new ActivityPostDto
                {
                    TripId = activity.TripId,
                    Title = activity.Title,
                    Location = activity.Location,
                    StartDateTime = activity.StartDateTime,
                    EndDateTime = activity.EndDateTime,
                    Cost = activity.Cost,
                    Notes = activity.Notes
                };

            var success = await ActivityService.UpdateAsync(id, dto);

            if (success)
            {
                await JS.InvokeVoidAsync("alert", "✅ Actividad actualizada correctamente.");
                Nav.NavigateTo($"/activities/{activity.TripId}");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ No se pudo actualizar la actividad.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al actualizar: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Error inesperado al actualizar.");
        }
    }

    // Modelo con validaciones
    private class ActivityInputModel
    {
        public int TripId { get; set; }

        [Required(ErrorMessage = "El título es obligatorio.")]
        [StringLength(100, ErrorMessage = "Máximo 100 caracteres.")]
        public string? Title { get; set; }

        [Required(ErrorMessage = "La ubicación es obligatoria.")]
        public string? Location { get; set; }

        [Required(ErrorMessage = "Debe especificar la fecha de inicio.")]
        public DateTime StartDateTime { get; set; }

        [Required(ErrorMessage = "Debe especificar la fecha de fin.")]
        public DateTime EndDateTime { get; set; }

        [Range(0, 1000000, ErrorMessage = "El costo no puede ser negativo.")]
        public decimal Cost { get; set; } = 0; // valor por defecto

        public string? Notes { get; set; }
    }
}

<style>
    :root {
        --azul-oscuro: #0b132b;
        --morado: #6a5acd;
        --azul: #4f9ef8;
        --texto-claro: #e4e9ff;
    }

    body {
        background-color: var(--azul-oscuro);
        color: var(--texto-claro);
        font-family: 'Segoe UI', sans-serif;
    }

    .activity-edit {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        min-height: 90vh;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        padding: 2rem;
        width: 100%;
        max-width: 700px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
        color: #f0f3ff;
    }

    .text-gradient {
        background: linear-gradient(90deg, var(--morado), var(--azul));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .input-styled {
        border: 1px solid rgba(255, 255, 255, 0.2);
        background-color: rgba(255, 255, 255, 0.05);
        color: #fff;
        border-radius: 8px;
        transition: all 0.25s ease;
    }

        .input-styled:focus {
            border-color: var(--azul);
            box-shadow: 0 0 0 3px rgba(79, 158, 248, 0.3);
        }

    .btn-gradient {
        background: linear-gradient(90deg, var(--azul), var(--morado));
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.2rem;
        transition: all 0.25s ease;
        font-weight: 500;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(108, 99, 255, 0.3);
        }

    .btn-outline-light {
        color: #e4e9ff;
        border-color: rgba(255, 255, 255, 0.4);
    }

        .btn-outline-light:hover {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
        }

    .text-warning {
        color: #ffd166 !important;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.4s ease-in-out;
    }
</style>
