@page "/activities/details/{id:int}"
@using TravelOrganizer.Client.Models
@using TravelOrganizer.Client.Services
@inject ActivityApiService ActivityService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="activity-details fade-in">
    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-light"></div>
            <p class="mt-3 text-light opacity-75">Cargando información...</p>
        </div>
    }
    else if (activity is null)
    {
        <div class="alert alert-danger text-center mt-4 shadow-sm">
            <span class="bi bi-exclamation-triangle me-2"></span>
            No se encontró la actividad.
        </div>
    }
    else
    {
        <div class="card-details mx-auto">
            <div class="header">
                <h3 class="fw-bold text-gradient mb-1">@activity.Title</h3>
                <p class="subtitle">Viaje #@activity.TripId</p>
            </div>

            <div class="info">
                <div><strong>Ubicación:</strong> @(activity.Location ?? "No especificada")</div>
                <div><strong>Inicio:</strong> @activity.StartDateTime.ToString("dd/MM/yyyy HH:mm")</div>
                <div><strong>Fin:</strong> @activity.EndDateTime.ToString("dd/MM/yyyy HH:mm")</div>
                <div>
                    <strong>Costo:</strong>
                    <span class="text-success fw-semibold">@activity.Cost.ToString("C")</span>
                </div>
                <div><strong>Notas:</strong> @(string.IsNullOrWhiteSpace(activity.Notes) ? "—" : activity.Notes)</div>
            </div>

            <div class="buttons text-end mt-4">
                <button class="btn btn-outline-light me-2"
                        @onclick="@(() => Nav.NavigateTo($"/activities/{activity.TripId}"))">
                    <span class="bi bi-arrow-left-circle me-1"></span> Volver
                </button>

                <button class="btn btn-outline-warning me-2"
                        @onclick="@(() => Nav.NavigateTo($"/activities/edit/{activity.Id}"))">
                    <span class="bi bi-pencil me-1"></span> Editar
                </button>

                <button class="btn btn-outline-danger"
                        @onclick="@(() => DeleteFromDetails(activity.Id, activity.Title, activity.TripId))">
                    <span class="bi bi-trash me-1"></span> Eliminar
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private ActivityGetDto? activity;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            activity = await ActivityService.GetByIdAsync(id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener actividad: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "❌ Error al cargar la actividad.");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteFromDetails(int id, string title, int tripId)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar '{title}'?");
        if (!confirm) return;

        try
        {
            if (await ActivityService.DeleteAsync(id))
            {
                await JS.InvokeVoidAsync("alert", "✅ Actividad eliminada correctamente.");
                Nav.NavigateTo($"/activities/{tripId}");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ No se pudo eliminar la actividad.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al eliminar: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Ocurrió un error inesperado.");
        }
    }
}

<style>
    :root {
        --azul-oscuro: #0b132b;
        --morado: #6a5acd;
        --azul: #4f9ef8;
        --texto-claro: #e4e9ff;
    }

    body {
        background-color: var(--azul-oscuro);
        color: var(--texto-claro);
        font-family: 'Segoe UI', sans-serif;
    }

    .activity-details {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem;
    }

    .card-details {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        padding: 2rem 2.5rem;
        width: 100%;
        max-width: 650px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        color: #f0f3ff;
    }

    .header {
        border-bottom: 1px solid rgba(255, 255, 255, 0.15);
        margin-bottom: 1.5rem;
        padding-bottom: 0.8rem;
    }

    .text-gradient {
        background: linear-gradient(90deg, var(--morado), var(--azul));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        color: #a8b3ff;
        font-size: 0.9rem;
    }

    .info div {
        padding: 0.35rem 0;
        font-size: 1rem;
        color: #dee3ff;
    }

    .buttons button {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: white;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.4s ease-in-out;
    }
</style>
