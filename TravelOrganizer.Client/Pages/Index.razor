@page "/"
@inject NavigationManager Nav

<div class="home fade-in">
    <div class="welcome-card text-center">
        <span class="bi bi-globe2 icon"></span>

        <h1 class="title fw-semibold">PlanGo 🌍</h1>
        <p class="subtitle">Tu compañero para planificar y recordar tus viajes.</p>

        <button class="btn-start" @onclick="IrAViajes">
            ✈️ Ver mis viajes
        </button>

        <footer class="footer mt-4">
            <small>Desarrollado con 💜 por <strong>Regina</strong> y <strong>Jared</strong></small>
        </footer>
    </div>
</div>

<style>
    :root {
        --azul-oscuro: #0b132b;
        --azul: #4f9ef8;
        --morado: #6c63ff;
        --texto: #f2f3fa;
    }

    body {
        background-color: var(--azul-oscuro);
        font-family: 'Segoe UI', sans-serif;
        color: var(--texto);
        margin: 0;
    }

    /* ===== CONTENEDOR PRINCIPAL ===== */
    .home {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1.5rem;
    }

    /* ===== TARJETA CENTRAL ===== */
    .welcome-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 3rem 2.5rem;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .welcome-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        }

    /* ===== ICONO ===== */
    .icon {
        font-size: 3rem;
        background: linear-gradient(90deg, var(--azul), var(--morado));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
        margin-bottom: 1.2rem;
    }

    /* ===== TITULO Y SUBTITULO ===== */
    .title {
        font-size: 2.3rem;
        color: white;
        margin-bottom: 0.8rem;
    }

    .subtitle {
        color: #a8b3ff;
        font-size: 1.05rem;
        margin-bottom: 2rem;
    }

    /* ===== BOTÓN ===== */
    .btn-start {
        background: linear-gradient(90deg, var(--azul), var(--morado));
        border: none;
        border-radius: 30px;
        padding: 0.8rem 2.4rem;
        font-size: 1.05rem;
        color: white;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .btn-start:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(108, 99, 255, 0.3);
        }

    /* ===== FOOTER ===== */
    .footer {
        margin-top: 2.2rem;
        color: #b5c3ff;
        font-size: 0.9rem;
        opacity: 0.9;
    }

        .footer strong {
            color: #cfd3ff;
            font-weight: 600;
        }

    /* ===== ANIMACIÓN ===== */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }

    /* ===== RESPONSIVO ===== */
    @@media (max-width: 768px) {
        .welcome-card {
            padding: 2rem 1.5rem;
        }

        .title {
            font-size: 1.8rem;
        }
    }
</style>

@code {
    private void IrAViajes()
    {
        Nav.NavigateTo("/trips");
    }
}
