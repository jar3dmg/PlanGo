@page "/trips"
@using System.Globalization
@using TravelOrganizer.Client.Models
@using TravelOrganizer.Client.Services
@inject TripApiService TripService
@inject NavigationManager Nav
@inject IJSRuntime JS

<div class="trip-list fade-in">
    <h3 class="text-center mb-4 text-gradient fw-semibold">
        <span class="bi bi-airplane me-2"></span> Lista de Viajes ✈️
    </h3>

    <div class="form-card mx-auto">
        <div class="text-end mb-3">
            <button class="btn btn-gradient" @onclick="CreateTrip">
                <span class="bi bi-plus-circle me-1"></span> Nuevo viaje
            </button>
        </div>

        @if (trips is null)
        {
            <div class="text-center mt-5">
                <div class="spinner-border text-light"></div>
                <p class="mt-3 text-light opacity-75">Cargando viajes...</p>
            </div>
        }
        else if (!trips.Any())
        {
            <div class="text-center mt-5 text-light opacity-75">
                <p>No hay viajes registrados aún.</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="trip-table align-middle text-center mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Destino</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>Presupuesto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trip in trips)
                        {
                            <tr>
                                <td>@trip.Name</td>
                                <td>@trip.Destination</td>
                                <td>@trip.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@trip.EndDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-success fw-semibold">@Money(trip.Budget)</td>
                                <td>
                                    <button class="btn btn-outline-light btn-sm me-2"
                                            @onclick="() => ViewTrip(trip.Id)">
                                        <span class="bi bi-eye me-1"></span> Ver
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm"
                                            @onclick="() => DeleteTrip(trip.Id, trip.Name)">
                                        <span class="bi bi-trash me-1"></span> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- 🔹 Nuevo botón Ir al Menú -->
        <div class="text-center mt-4">
            <button class="btn btn-outline-light" @onclick="GoToMenu">
                <span class="bi bi-house-door"></span> Ir al menú
            </button>
        </div>
    </div>
</div>

@code {
    private List<TripGetDto>? trips;
    private static readonly CultureInfo _mx = new("es-MX");

    private static string Money(decimal? v)
        => string.Format(_mx, "${0:N0}", v ?? 0);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            trips = await TripService.GetTripsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener viajes: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "❌ Error al cargar la lista de viajes.");
        }
    }

    private void CreateTrip() => Nav.NavigateTo("/trips/create");
    private void ViewTrip(int id) => Nav.NavigateTo($"/trips/{id}");
    private void GoToMenu() => Nav.NavigateTo("/");

    private async Task DeleteTrip(int id, string name)
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que deseas eliminar el viaje '{name}'?");
        if (!confirm) return;

        try
        {
            bool success = await TripService.DeleteTripAsync(id);

            if (success)
            {
                trips?.RemoveAll(t => t.Id == id);
                await JS.InvokeVoidAsync("alert", "✅ Viaje eliminado correctamente.");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "❌ No se pudo eliminar el viaje.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al eliminar: {ex.Message}");
            await JS.InvokeVoidAsync("alert", "⚠️ Ocurrió un error inesperado.");
        }
    }
}

<style>
    :root {
        --azul-oscuro: #0b132b;
        --morado: #6a5acd;
        --azul: #4f9ef8;
        --texto-claro: #ffffff;
    }

    body {
        background-color: var(--azul-oscuro);
        color: var(--texto-claro);
        font-family: 'Segoe UI', sans-serif;
    }

    .trip-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        min-height: 90vh;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        padding: 2rem;
        width: 100%;
        max-width: 950px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
    }

    .text-gradient {
        background: linear-gradient(90deg, var(--morado), var(--azul));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .trip-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
        background-color: var(--azul-oscuro);
        color: var(--texto-claro);
    }

        .trip-table thead {
            background: linear-gradient(90deg, var(--morado), var(--azul));
            color: white;
            font-weight: 600;
        }

        .trip-table th,
        .trip-table td {
            padding: 0.9rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        }

        .trip-table tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
            transition: background-color 0.3s ease;
        }

    /* BOTONES */
    .btn-gradient {
        background: linear-gradient(90deg, var(--azul), var(--morado));
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.2rem;
        font-weight: 500;
        transition: all 0.25s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(108, 99, 255, 0.3);
        }

    .btn-outline-light {
        color: #ffffff;
        border: 1px solid rgba(255, 255, 255, 0.6);
        border-radius: 8px;
        padding: 0.5rem 1.1rem;
        transition: all 0.25s ease;
    }

        .btn-outline-light:hover {
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }

    .btn-outline-danger {
        color: #ffb3b3;
        border: 1px solid rgba(255, 99, 99, 0.6);
        border-radius: 8px;
        padding: 0.4rem 0.9rem;
        transition: all 0.25s ease;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
            border-color: #dc3545;
        }

    .text-success {
        color: #00ff9c !important;
        font-weight: 600;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.4s ease-in-out;
    }
</style>
